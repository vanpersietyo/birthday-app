NODE_ENV=development
PORT=3000

# Database (Prisma)
DATABASE_URL="postgresql://{username}:{password}@{host}:{port}/{db_name}?schema={schema_name}"

# Email Service
EMAIL_SERVICE_URL=https://email-service.digitalenvision.com.au
EMAIL_SERVICE_TIMEOUT=5000
EMAIL_SERVICE_MAX_RETRIES=3
EMAIL_SERVICE_RETRY_DELAY=2000

# Redis (for Bull queue)
REDIS_HOST=localhost
REDIS_PORT=6379

# Birthday Scheduler
BIRTHDAY_CHECK_CRON=*/5 * * * *
BIRTHDAY_MESSAGE_HOUR=9
BIRTHDAY_MESSAGE_MINUTE=0
