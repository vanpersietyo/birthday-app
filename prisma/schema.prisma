// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  firstName String   @map("first_name") @db.VarChar(100)
  lastName  String   @map("last_name") @db.VarChar(100)
  email     String   @unique @db.VarChar(255)
  birthday  String   @db.VarChar(10) // Format: YYYY-MM-DD
  timezone  String   @db.VarChar(100) // IANA timezone format
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  messageLogs MessageLog[]

  @@index([email])
  @@index([birthday])
  @@map("users")
}

enum MessageStatus {
  PENDING
  SENT
  FAILED
  RETRY
}

enum MessageType {
  BIRTHDAY
  ANNIVERSARY
}

model MessageLog {
  id            String        @id @default(uuid())
  userId        String        @map("user_id")
  messageType   MessageType   @default(BIRTHDAY) @map("message_type")
  message       String        @db.Text
  status        MessageStatus @default(PENDING)
  scheduledDate String        @map("scheduled_date") @db.VarChar(10) // Format: YYYY-MM-DD
  scheduledAt   DateTime      @map("scheduled_at") // Exact time to send (9 AM user's local time)
  sentAt        DateTime?     @map("sent_at")
  retryCount    Int           @default(0) @map("retry_count")
  errorMessage  String?       @map("error_message") @db.Text
  lockId        String?       @map("lock_id") @db.VarChar(100)
  lockedUntil   DateTime?     @map("locked_until")
  createdAt     DateTime      @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, messageType, scheduledDate])
  @@index([userId])
  @@index([status])
  @@index([scheduledDate])
  @@map("message_logs")
}
